<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/box_round"
    android:paddingTop="30dp"
    android:paddingHorizontal="20dp"
    android:paddingBottom="20dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정말 삭제하시겠습니까?"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"
        android:fontFamily="@font/bold"
        android:textFontWeight="500"
        android:textSize="14dp"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="삭제하기"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/medium"
            android:textColor="#394254"
            android:textSize="16dp"
            android:background="@drawable/round_btn_item"
            android:backgroundTint="#F4F5F6"
            android:id="@+id/deleteDialogDelBtn"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="취소"
            android:fontFamily="@font/medium"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:background="@drawable/round_btn_item"
            android:id="@+id/deleteDialogCancelBtn"/>
    </LinearLayout>

</LinearLayout>