<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:paddingBottom="20dp"
    android:orientation="vertical"
    android:background="@drawable/book_sheet_background"
    >
    <androidx.appcompat.widget.Toolbar
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bookContentToolbar"
        android:background="@color/white"
        android:theme="@style/ToolbarTheme"
        android:paddingTop="10dp"

        >
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="예약 정보"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:fontFamily="@font/bold"
            android:includeFontPadding="false"
            />

    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="장소"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:fontFamily="@font/regular"
        android:textFontWeight="400"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/bookContentToolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="20dp"
        android:id="@+id/bookContentPlaceTitle"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bookContentPlace"
        android:text="써클룸"
        android:paddingStart="20dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/bookContentPlaceTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:fontFamily="@font/regular"
        android:textFontWeight="400"
        android:includeFontPadding="false"
        />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:id="@+id/bookContentDateTimeTitleContainer"
        app:layout_constraintTop_toBottomOf="@id/bookContentPlace"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/regular"
            android:textFontWeight="400"
            android:includeFontPadding="false"
            android:id="@+id/bookContentDateTitle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/regular"
            android:textFontWeight="400"
            android:includeFontPadding="false"
            android:id="@+id/bookContentTimeTitle"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:id="@+id/bookContentDateTimeContainer"
        app:layout_constraintTop_toBottomOf="@id/bookContentDateTimeTitleContainer"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2022년11월24일"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/regular"
            android:textFontWeight="400"
            android:includeFontPadding="false"
            android:id="@+id/bookContentDate"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="오후 3:00~5:00"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/regular"
            android:textFontWeight="400"
            android:includeFontPadding="false"
            android:id="@+id/bookContentTime"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제목"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/regular"
        android:textFontWeight="400"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/bookContentDateTimeContainer"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="20dp"
        android:id="@+id/bookContentTitleTitle"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="여름 공연 합주"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/regular"
        android:textFontWeight="400"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/bookContentTitleTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="20dp"
        android:id="@+id/bookContentTitle"/>



</androidx.constraintlayout.widget.ConstraintLayout>