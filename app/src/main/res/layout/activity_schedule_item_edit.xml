<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".NoticeAddActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:id="@+id/scheduleEditToolBar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:gravity="left"
            android:layout_weight="1"
            android:textFontWeight="400"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:id="@+id/scheduleEditCancelBtn"
            android:fontFamily="@font/bold"
            android:includeFontPadding="false"
            />
        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일정 수정"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:fontFamily="@font/bold"
            android:includeFontPadding="false"
            />
        <TextView
            android:layout_weight="1"
            android:id="@+id/scheduleAddSendBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="완료"
            android:gravity="right"
            android:textFontWeight="400"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:fontFamily="@font/bold"
            android:includeFontPadding="false"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/scheduleEditInputTitle"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:hint="제목을 입력하세요"
        android:inputType="text"
        android:textColorHint="#D6D6D6"
        android:textColor="@color/black"
        android:fontFamily="@font/regular"
        android:textFontWeight="500"
        android:textSize="18dp"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scheduleEditToolBar" />


    <EditText
        android:id="@+id/scheduleEditInputContext"
        android:layout_width="335dp"
        android:gravity="top"
        android:layout_height="500dp"
        android:layout_marginTop="17dp"
        android:hint="내용을 입력하세요"
        android:inputType="textMultiLine"
        android:textColorHint="#D6D6D6"
        android:textColor="@color/black"
        android:background="@null"
        android:textFontWeight="400"
        android:fontFamily="@font/regular"
        android:textSize="14dp"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scheduleEditInputTitle" />


</androidx.constraintlayout.widget.ConstraintLayout>