<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".book.BookFragment">

    <TableLayout
        android:layout_marginTop="50dp"
        android:id="@+id/bookCalendarHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="22dp"
                android:layout_height="50dp"
                android:background="@color/purple_200"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="일"
                    android:textSize="10dp"
                    android:textFontWeight="400"
                    android:fontFamily="@font/medium"
                    android:includeFontPadding="false"
                    android:textColor="#FF4848"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24"
                    android:id="@+id/bookCalendarDate1"
                    android:textSize="15dp"
                    android:textFontWeight="500"
                    android:fontFamily="@font/medium"
                    android:includeFontPadding="false"
                    android:textColor="#FF4848"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="월"
                    android:textSize="10dp"
                    android:textFontWeight="400"
                    android:fontFamily="@font/medium"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25"
                    android:id="@+id/bookCalendarDate2"
                    android:textSize="15dp"
                    android:textFontWeight="500"
                    android:fontFamily="@font/medium"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="화"
                    android:textSize="10dp"
                    android:textFontWeight="400"
                    android:fontFamily="@font/medium"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="26"
                    android:id="@+id/bookCalendarDate3"
                    android:textSize="15dp"
                    android:textFontWeight="500"
                    android:fontFamily="@font/medium"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="수"
                    android:textSize="10dp"
                    android:textFontWeight="400"
                    android:fontFamily="@font/medium"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="27"
                    android:id="@+id/bookCalendarDate4"
                    android:textSize="15dp"
                    android:textFontWeight="500"
                    android:fontFamily="@font/medium"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="목"
                    android:textSize="10dp"
                    android:textFontWeight="400"
                    android:fontFamily="@font/medium"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28"
                    android:id="@+id/bookCalendarDate5"
                    android:textSize="15dp"
                    android:textFontWeight="500"
                    android:fontFamily="@font/medium"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="금"
                    android:textSize="10dp"
                    android:textFontWeight="400"
                    android:fontFamily="@font/medium"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="29"
                    android:id="@+id/bookCalendarDate6"
                    android:textSize="15dp"
                    android:textFontWeight="500"
                    android:fontFamily="@font/medium"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="토"
                    android:textSize="10dp"
                    android:textFontWeight="400"
                    android:fontFamily="@font/medium"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:id="@+id/bookCalendarDate7"
                    android:textSize="15dp"
                    android:textFontWeight="500"
                    android:fontFamily="@font/medium"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookCalendarHeader"
        android:orientation="horizontal"
        android:id="@+id/bookCalendarMainContainer">
        <GridLayout
            android:layout_marginRight="3dp"
            android:layout_width="22dp"
            android:layout_height="match_parent"
            android:background="@color/purple_200"
            android:columnCount="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/book_boxline"
                tools:ignore="Orientation" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9AM"
                    android:textSize="9dp"
                    android:textColor="#797979"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/book_boxline"
                tools:ignore="Orientation" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10AM"
                    android:textSize="9dp"
                    android:textColor="#797979"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/book_boxline"
                tools:ignore="Orientation" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11AM"
                    android:textSize="9dp"
                    android:textColor="#797979"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/book_boxline"
                tools:ignore="Orientation" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12PM"
                    android:textSize="9dp"
                    android:textColor="#797979"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/book_boxline"
                tools:ignore="Orientation" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1PM"
                    android:textSize="9dp"
                    android:textColor="#797979"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/book_boxline"
                tools:ignore="Orientation" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2PM"
                    android:textSize="9dp"
                    android:textColor="#797979"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/book_boxline"
                tools:ignore="Orientation" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3PM"
                    android:textSize="9dp"
                    android:textColor="#797979"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/book_boxline"
                tools:ignore="Orientation" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4PM"
                    android:textSize="9dp"
                    android:textColor="#797979"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/book_boxline"
                tools:ignore="Orientation" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5PM"
                    android:textSize="9dp"
                    android:textColor="#797979"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/book_boxline"
                tools:ignore="Orientation" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6PM"
                    android:textSize="9dp"
                    android:textColor="#797979"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/book_boxline"
                tools:ignore="Orientation" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7PM"
                    android:textSize="9dp"
                    android:textColor="#797979"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/book_boxline"
                tools:ignore="Orientation" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8PM"
                    android:textSize="9dp"
                    android:textColor="#797979"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/book_boxline"
                tools:ignore="Orientation" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9PM"
                    android:textSize="9dp"
                    android:textColor="#797979"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/book_boxline"
                tools:ignore="Orientation" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10PM"
                    android:textSize="9dp"
                    android:textColor="#797979"/>
            </LinearLayout>
        </GridLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bookCalendarList"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="추가"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/bookCalendarMainContainer"
        android:id="@+id/add"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>