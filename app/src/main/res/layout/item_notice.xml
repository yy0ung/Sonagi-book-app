<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="335dp"
    android:layout_height="83dp"
    android:paddingStart="20dp"
    android:paddingTop="8dp"
    android:id="@+id/noticeItemContainer"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="중요"
        android:id="@+id/noticeItemImportant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/regular"
        android:textSize="14dp"
        android:layout_marginEnd="3dp"
        android:visibility="gone"
        android:textFontWeight="500"
        android:textColor="#FF4848"
        android:includeFontPadding="false"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/noticeItemTitle"
        android:fontFamily="@font/regular"
        android:textSize="14dp"
        android:textFontWeight="500"
        android:text="공지 제목"
        android:textColor="@color/black"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/noticeItemImportant"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/noticeItemContext"
        android:fontFamily="@font/regular"
        android:textSize="13dp"
        android:textFontWeight="400"
        android:text="공지 내용"
        android:textColor="#717784"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/noticeItemTitle"
        app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/noticeItemBottomContainer"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@id/noticeItemContext"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회장"
            android:textSize="10dp"
            android:background="@drawable/notice_writer"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:fontFamily="@font/medium"
            android:textFontWeight="700"
            android:textColor="#FFFFFF"
            android:includeFontPadding="false"
            android:id="@+id/noticeItemWriterP"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/noticeItemWriter"
            android:fontFamily="@font/regular"
            android:textSize="11dp"
            android:textFontWeight="400"
            android:text="작성자"
            android:layout_marginStart="6dp"
            android:textColor="#717784"
            android:includeFontPadding="false"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:textSize="11dp"
            android:textFontWeight="400"
            android:text="|"
            android:layout_marginStart="6dp"
            android:textColor="#717784"
            android:includeFontPadding="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/noticeItemDate"
            android:text="7월 20일"
            android:fontFamily="@font/regular"
            android:textSize="11dp"
            android:textFontWeight="400"
            android:layout_marginStart="6dp"
            android:textColor="#717784"
            android:includeFontPadding="false"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="9dp"
        android:id="@+id/noticeItemLikeContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/noticeItemContext">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/noticeItemLikeImg"
            android:src="@drawable/likeempty"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/noticeItemLikeNum"
            android:textColor="#6B77FF"
            android:text="num"
            android:fontFamily="@font/regular"
            android:includeFontPadding="false"
            android:textSize="11dp"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>