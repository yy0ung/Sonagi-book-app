<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoticeContentActivity">
    <TextView
        android:id="@+id/noticeContentTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        android:text="공지 제목"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/noticeContentWriter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/noticeContentTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:text="공지 작성자"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/noticeContentContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/noticeContentWriter"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:text="공지 내용"
        android:textSize="20dp"/>
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/noticeContentLikeImg"
        app:layout_constraintTop_toBottomOf="@id/noticeContentContent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/noticeContentLikeNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/noticeContentLikeImg"
        app:layout_constraintStart_toStartOf="parent"
        android:text="num"
        android:textSize="20dp"/>
    <Button
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="삭제"
        android:id="@+id/delete"/>

</androidx.constraintlayout.widget.ConstraintLayout>